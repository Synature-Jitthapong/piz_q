<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ActivityDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
    	<item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- Application theme. -->
    <style name="SettingActivityTheme" parent="android:Theme.Holo.Light">
        
    </style>
    <style name="QueueActivityTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ColumnHeader" parent="android:Widget.TextView">
        <item name="android:background">@color/header</item>
        <item name="android:layout_marginBottom">1dp</item>
       	<item name="android:paddingLeft">4dp</item>
       	<item name="android:paddingTop">4dp</item>
       	<item name="android:paddingRight">4dp</item>
       	<item name="android:paddingBottom">0dp</item>
    </style>
    <style name="ColumnDetail" parent="ColumnHeader">
        <item name="android:background">@color/detail</item>
    </style>
    <style name="SubHead" parent="ColumnHeader">
        <item name="android:textColor">@android:color/holo_blue_light</item>
       <item name="android:background">@color/sub_header</item>
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
</resources>
